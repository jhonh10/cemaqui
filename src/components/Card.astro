---
import { Image } from "astro:assets";
interface Props {
  title: string;
  body: string;
  image: ImageMetadata;
  altImg: string;
}

const { title, image, body, altImg } = Astro.props;
---

<div class="link-card">
  <div class="card-item">
    <h3>
      {title}
    </h3>
    <Image src={image} alt={altImg} class="card-image" loading="lazy" />
    <p>
      {body}
    </p>
  </div>
</div>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;

    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
  }
  .link-card > .card-item {
    width: 100%;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    color: white;
    opacity: 0.8;
  }
  h3 {
    margin: 0;
    font-size: 1.5rem;
    text-align: center;
    padding: 1rem;
	color: rgb(var(--accent));
	transition: all 0.3s;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .card-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 8px;
  }
  .link-card:is(:hover, :focus-within) h3 {
    color: white;
  }
</style>
